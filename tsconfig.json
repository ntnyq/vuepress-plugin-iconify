{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src"
  ]
}
