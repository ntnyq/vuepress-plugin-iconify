{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2023"],
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "noEmitOnError": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./docs"]
}
