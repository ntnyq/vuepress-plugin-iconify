{
  "name": "vuepress-plugin-iconify",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@7.17.0",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "vuepress",
    "vuepress-plugin",
    "iconify",
    "icon",
    "svg"
  ],
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-iconify.git"
  },
  "main": "./lib/node/index.js",
  "types": "./lib/node/index.d.ts",
  "exports": {
    ".": "./lib/node/index.js",
    "./client": "./lib/client/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-s clean build:lib",
    "build:docs": "pnpm --filter=docs run build",
    "build:lib": "tsc -b",
    "clean": "rimraf lib *.tsbuildinfo",
    "dev": "run-s clean dev:lib",
    "dev:docs": "pnpm --filter=docs run dev",
    "dev:lib": "tsc -b --watch",
    "prepare": "husky install",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "run-s release:check release:publish",
    "release:check": "run-s typecheck clean build",
    "release:publish": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-beta.53"
  },
  "dependencies": {
    "@iconify/vue": "^4.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config-typescript": "^1.1.0",
    "@types/node": "^18.11.9",
    "@vuepress/client": "2.0.0-beta.53",
    "bumpp": "^8.2.1",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.17.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3",
    "vue": "^3.2.45",
    "vuepress": "2.0.0-beta.53"
  },
  "lint-staged": {
    "*.{js,ts,vue,yaml,yml,md,json}": "eslint --fix"
  }
}
