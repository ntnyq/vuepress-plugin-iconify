{
  "name": "vuepress-plugin-iconify",
  "version": "0.0.3",
  "packageManager": "pnpm@7.13.1",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "vuepress",
    "vuepress-plugin",
    "iconify",
    "icon",
    "svg"
  ],
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-iconify.git"
  },
  "main": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-s clean build:lib",
    "build:docs": "pnpm --filter=docs run build",
    "build:lib": "tsc -b tsconfig.build.json",
    "clean": "rimraf lib *.tsbuildinfo",
    "dev": "run-s clean dev:lib",
    "dev:docs": "pnpm --filter=docs run dev",
    "dev:lib": "tsc -b tsconfig.build.json --watch",
    "prepare": "husky install",
    "lint": "run-p lint:*",
    "lint:script": "eslint .",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "release": "run-s release:check release:version release:publish",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "run-s typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog\" --all"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-beta.51"
  },
  "dependencies": {
    "@iconify/vue": "^4.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config-typescript": "^1.0.4",
    "@types/node": "^18.8.2",
    "@vuepress/client": "2.0.0-beta.51",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4",
    "vue": "^3.2.40",
    "vuepress": "2.0.0-beta.51"
  },
  "lint-staged": {
    "*.{js,ts,yaml,md,json}": "eslint --fix"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@ntnyq/typescript"
  },
  "eslintIgnore": [
    "lib"
  ]
}
