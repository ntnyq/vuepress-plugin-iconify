{
  "name": "vuepress-plugin-iconify",
  "type": "module",
  "version": "0.3.0",
  "packageManager": "pnpm@7.26.3",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "vuepress",
    "vuepress-plugin",
    "iconify",
    "icon",
    "svg"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "repository": "ntnyq/vuepress-plugin-iconify",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "exports": {
    ".": "./dist/node/index.js",
    "./client": "./dist/client/index.js",
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean build:lib",
    "build:docs": "pnpm --filter=docs run build",
    "build:lib": "tsc -b",
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "run-s clean dev:lib",
    "dev:docs": "pnpm --filter=docs run dev",
    "dev:lib": "tsc -b --watch",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:check release:publish",
    "release:check": "run-s typecheck clean build",
    "release:publish": "bumpp && pnpm publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vuepress": "2.0.0-beta.60"
  },
  "dependencies": {
    "@iconify/vue": "^4.1.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.3.0",
    "@types/node": "^18.11.19",
    "@vuepress/client": "2.0.0-beta.60",
    "bumpp": "^8.2.1",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.26.3",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "vue": "^3.2.47",
    "vuepress": "2.0.0-beta.60"
  },
  "nano-staged": {
    "*.{js,ts,vue,yaml,yml,md,json}": "eslint --fix"
  }
}
