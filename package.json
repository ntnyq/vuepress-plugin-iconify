{
  "name": "vuepress-plugin-iconify",
  "type": "module",
  "version": "0.8.0",
  "packageManager": "pnpm@10.27.0",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "icon",
    "iconify",
    "svg",
    "vuepress",
    "vuepress-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "repository": "ntnyq/vuepress-plugin-iconify",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/node/index.js",
    "./client": "./dist/client/index.js",
    "./client/*": "./dist/client/*"
  },
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "deploy": "run-s build docs:build",
    "dev": "tsdown --watch",
    "dev:lib": "tsc -b --watch",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint",
    "prepare": "husky",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck clean build",
    "release:version": "bumpp",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-rc.15"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.10.4",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vuepress": "catalog:"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,yml,yaml,json}": "eslint --fix"
  }
}
