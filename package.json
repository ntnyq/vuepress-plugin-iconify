{
  "name": "vuepress-plugin-iconify",
  "version": "0.0.0",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "vuepress",
    "vuepress-plugin",
    "iconify",
    "icon",
    "svg"
  ],
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-iconify.git"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "main": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:lib",
    "build:docs": "pnpm -C docs run build",
    "build:lib": "tsc -b tsconfig.build.json",
    "clean": "rimraf lib *.tsbuildinfo",
    "dev": "pnpm run clean && pnpm run dev:lib",
    "dev:docs": "pnpm -C docs run dev",
    "dev:lib": "tsc -b tsconfig.build.json --watch",
    "prepare": "husky install",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "release": "run-s release:check release:version release:publish",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "run-s typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog\" --commit \"build: release v%s\" --all --tag --push"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write"
  },
  "prettier": "@ntnyq/prettier-config",
  "dependencies": {
    "@iconify/vue": "^3.2.1"
  },
  "devDependencies": {
    "@ntnyq/prettier-config": "^0.3.1",
    "@types/node": "^17.0.31",
    "@vuepress/client": "2.0.0-beta.43",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "vue": "^3.2.33",
    "vuepress": "2.0.0-beta.43"
  },
  "packageManager": "pnpm@7.0.0"
}
