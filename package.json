{
  "name": "vuepress-plugin-iconify",
  "type": "module",
  "version": "0.7.0",
  "packageManager": "pnpm@10.10.0",
  "description": "Using icons more easier in VuePress",
  "keywords": [
    "icon",
    "iconify",
    "svg",
    "vuepress",
    "vuepress-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://vuepress-plugin-iconify.ntnyq.com",
  "repository": "ntnyq/vuepress-plugin-iconify",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-iconify/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/node/index.js",
    "./client": "./dist/client/index.js",
    "./client/*": "./dist/client/*"
  },
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean build:lib",
    "build:lib": "tsc -b",
    "clean": "premove dist",
    "deploy": "run-s build docs:build",
    "dev": "run-s clean dev:lib",
    "dev:lib": "tsc -b --watch",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint .",
    "prepare": "husky",
    "release": "run-s release:check release:publish",
    "release:check": "run-s typecheck clean build",
    "release:publish": "bumpp && pnpm publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-rc.15"
  },
  "dependencies": {
    "@iconify/vue": "^4.3.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.1.0",
    "@ntnyq/prettier-config": "^2.0.0",
    "@types/node": "^22.15.3",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "premove": "^4.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vuepress": "catalog:"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,yml,yaml,json}": "eslint --fix"
  }
}
